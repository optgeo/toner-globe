/// Configuration for data sources
module toner.config.Sources

/// OpenMapTiles vector source configuration
class VectorSource {
  type: String
  url: String
}

/// Main OpenStreetMap Japan data source
openmaptiles: VectorSource = new VectorSource {
  type = "vector"
  url = "https://tile.openstreetmap.jp/data/planet.json"
}

/// Takeshima islands source
takeshima: VectorSource = new VectorSource {
  type = "vector"
  url = "https://tile.openstreetmap.jp/data/takeshima.json"
}

/// Hoppo (Northern Territories) islands source
hoppo: VectorSource = new VectorSource {
  type = "vector"
  url = "https://tile.openstreetmap.jp/data/hoppo.json"
}
