  new {
    ["id"] = "landcover"
    ["type"] = "fill"
    ["source"] = "openmaptiles"
    ["source-layer"] = "landcover"
    ["maxzoom"] = 14
    ["layout"] = new {
      ["visibility"] = "visible"
    }
    ["paint"] = new {
      ["fill-color"] = new {
        "case"
        new { "=="; new { "get"; "class" }; "grass" }
        "rgba(0, 0, 0, 0.05)"
        new { "=="; new { "get"; "class" }; "scrub" }
