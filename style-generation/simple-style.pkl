  new {
    ["id"] = "water"
    ["type"] = "fill"
    ["source"] = "openmaptiles"
    ["source-layer"] = "water"
    ["filter"] = new {
      "all"
      new { "!="; "brunnel"; "tunnel" }
      new { "=="; "$type"; "Polygon" }
      new { "!="; "intermittent"; 1 }
    }
    ["layout"] = new {
      ["visibility"] = "visible"
    }
    ["paint"] = new {
      ["fill-antialias"] = true
      ["fill-color"] = "rgba(0, 0, 0, 0.15)"
    }
  }
  
